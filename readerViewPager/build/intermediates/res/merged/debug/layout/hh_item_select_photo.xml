<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hh_select_photo_bg" >

    <ImageView
        android:id="@+id/hh_img_select_photo"
        style="@style/hh_fi_fi"
        android:scaleType="centerCrop"
        android:src="@drawable/hh_select_photo_default" />

    <ImageView
        android:id="@+id/hh_img_box"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/hh_select_photo" />

</RelativeLayout>