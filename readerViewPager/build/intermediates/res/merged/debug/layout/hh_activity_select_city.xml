<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/hh_fi_fi"
    android:background="@color/white" >

    <com.huahan.hhbaseutils.view.letterview.HHLetterListView
        android:id="@+id/hh_lv_index"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <ListView
        android:id="@+id/hh_lv_city"
        style="@style/hh_listview"
        android:layout_toLeftOf="@id/hh_lv_index"
        android:layout_toStartOf="@id/hh_lv_index"
        android:divider="@null"
        android:dividerHeight="0dp" >
    </ListView>

    <TextView
        android:id="@+id/hh_tv_main_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#a0000000"
        android:gravity="center"
        android:minWidth="65dp"
        android:padding="10dip"
        android:textColor="@color/white"
        android:textSize="55sp" />

</RelativeLayout>