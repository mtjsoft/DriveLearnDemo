<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_dim"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp" >

    <GridView
        android:id="@+id/gv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@color/transparent"
        android:verticalSpacing="10dp"
        android:numColumns="4" >
    </GridView>

    <com.huahan.hhbaseutils.rippleview.MaterialRippleLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="50dp"
        app:mrl_rippleAlpha="0.4"
        app:mrl_rippleColor="@color/white_dim"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true" >

        <TextView
            android:id="@+id/tv_share_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hh_shape_window_share_normal"
            android:gravity="center"
            android:padding="13dp"
            android:text="@string/share_cancel"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </com.huahan.hhbaseutils.rippleview.MaterialRippleLayout>

</LinearLayout>